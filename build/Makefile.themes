include build/Makefile.incl

targets = openbox

all clean distclean:
	@for i in $(targets); do \
		$(MAKE) -$(MAKEFLAGS) -f build/Makefile.themes.$$i $@; \
	done

install:
	@for i in $(targets); do \
		$(MAKE) -$(MAKEFLAGS) -f build/Makefile.themes.$$i $@; \
	done

uninstall:
	@for i in $(targets); do \
		$(MAKE) -$(MAKEFLAGS) -f build/Makefile.themes.$$i $@; \
	done
	-rmdir $(DESTDIR)$(themedir)

.PHONY: all clean distclean install uninstall
